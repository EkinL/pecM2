rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function userDoc(uid) {
      return get(/databases/$(database)/documents/utilisateurs/$(uid));
    }

    function isAdmin() {
      return isSignedIn() && userDoc(request.auth.uid).data.role == 'admin';
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function tokensDecrementedOrUnchanged() {
      return !(resource.data.tokens is int) || !(request.resource.data.tokens is int) || request.resource.data.tokens <= resource.data.tokens;
    }

    function roleUnchanged() {
      return request.resource.data.role == resource.data.role;
    }

    match /utilisateurs/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId);
      allow update: if (isOwner(userId) && roleUnchanged() && tokensDecrementedOrUnchanged()) || isAdmin();
      allow delete: if isAdmin();

      match /aiMemory/{aiId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /iaProfiles/{profileId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && (isAdmin() || request.resource.data.ownerId == request.auth.uid);
      allow update: if isSignedIn() && (isAdmin() || request.resource.data.ownerId == request.auth.uid);
      allow delete: if isAdmin();
    }

    match /conversations/{conversationId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();

      match /messages/{messageId} {
        allow read: if isSignedIn() && (get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId == request.auth.uid || isAdmin());
        allow create: if isSignedIn() && (get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId == request.auth.uid || isAdmin());
        allow update, delete: if isAdmin();
      }
    }

    match /demandes/{demandeId} {
      allow read: if isSignedIn() && (
        resource.data.clientId == request.auth.uid ||
        resource.data.prestataireId == request.auth.uid
      );
      allow create: if isSignedIn() && request.resource.data.clientId == request.auth.uid;
      allow update: if isSignedIn() && (
        resource.data.clientId == request.auth.uid ||
        resource.data.prestataireId == request.auth.uid
      );
      allow delete: if isAdmin();
    }

    match /aiEvaluations/{evaluationId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow delete: if isAdmin();
    }

    match /settings/{settingId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /adminLogs/{logId} {
      allow read: if isAdmin();
      // Ecriture interdite côté client : logs écrits via serveur (Firebase Admin SDK).
      allow create, update, delete: if false;
    }

    match /cours/{coursId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
